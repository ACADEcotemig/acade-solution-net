@page "/"

<header class="banner">
    <img src="Imagens/CADE2.png" alt="ACADE Banner" />
</header>

<div class="botoes-duplos" style="text-align:center; margin:30px 0;">

    <a href="/login" class="botao-link">Login</a>
    <a href="/agendar" class="botao-link">Pedir</a>
</div>

<section>
    <h2>Como Funciona</h2>
    <div class="icons">
        <div>
            <img src="https://img.icons8.com/ios-filled/50/00b4aa/trash.png" />
            <span>Separe seu lixo corretamente</span>
        </div>
        <div>
            <img src="https://img.icons8.com/ios-filled/50/00b4aa/marker.png" />
            <span>Localize os postos de coleta ou marque sua localização</span>
        </div>
        <div>
            <img src="https://img.icons8.com/ios-filled/50/00b4aa/earth-planet.png" />
            <span>Buscamos no mundo todo!</span>
        </div>
    </div>
</section>

<div id="meio">O que Recolhemos</div>
<section class="lixeiras">
    <div class="lixeira"><img src="Imagens/reci2.png" alt="Reciclável" /></div>
    <div class="lixeira"><img src="Imagens/organ2.png" alt="Orgânico" /></div>
    <div class="lixeira"><img src="Imagens/peri2.png" alt="Perigoso" /></div>
    <div class="lixeira"><img src="Imagens/aca4.png" alt="Não Reciclável" /></div>
</section>

@code {
    [Inject] NavigationManager Nav { get; set; } = default!;

}


@code {
    private void AbrirMaps()
    {
        string url = "https://www.google.com/maps/search/pontos+de+coleta+lixo";
        NavManager.NavigateTo(url, forceLoad: true);
    }

    [Inject] NavigationManager NavManager { get; set; }
}
@using Microsoft.AspNetCore.Components.Authorization
@inject NavigationManager Nav

<CascadingAuthenticationState>
    <Router AppAssembly="@typeof(App).Assembly">
        <Found Context="routeData">
            <ErrorBoundary>
                <ChildContent>
                    <RouteView RouteData="@routeData" DefaultLayout="@typeof(MainLayout)" />
                    <FocusOnNavigate RouteData="@routeData" Selector="h1" />
                </ChildContent>

                <ErrorContent Context="ex">
                    <LayoutView Layout="@typeof(MainLayout)">
                        <div class="alert alert-danger m-3">
                            <h4>An application error occurred</h4>
                            <p><strong>@ex.Message</strong></p>
                            <pre style="white-space:pre-wrap;">@ex.ToString()</pre>
                            <button class="btn btn-sm btn-primary" @onclick="Reload">Reload</button>
                        </div>
                    </LayoutView>
                </ErrorContent>
            </ErrorBoundary>
        </Found>
        <NotFound>
            <LayoutView Layout="@typeof(MainLayout)">
                <p class="text-center">Página não encontrada.</p>
            </LayoutView>
        </NotFound>
    </Router>
</CascadingAuthenticationState>

@code {
    private void Reload()
    {
        Nav.NavigateTo(Nav.Uri, forceLoad: true);
    }
}
